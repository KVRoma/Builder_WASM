<div class="row justify-content-center">
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="card text-white bg-secondary">
            <div class="card-header text-center">
                <h3>Client</h3>
            </div>
            <div class="card-body">
                <EditForm Model=@Model OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />

                    <div class="form-group mb-3" >
                        
                        <InputDate @bind-Value="Model.DateRegistration" class="form-control text-primary fw-bold"/>
                        <ValidationMessage For="@(() => Model.DateRegistration)" />
                    </div>
                    <div class="form-group mb-3">

                        <label class="form-control form-label text-primary fw-bold">@Model.NumberClient</label>
                        <ValidationMessage For="@(() => Model.NumberClient)" />
                    </div>




                    <div>
                        <p>
                            <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#Header" aria-expanded="false" aria-controls="Header">
                                <span class="oi oi-list text-dark"></span>
                                Header
                            </button>
                        </p>
                        <div class="collapse" id="Header">
                            <div class="mb-3">
                                
                            </div>
                        </div>
                    </div>





                    <div>
                        <p>
                            <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#Invoice" aria-expanded="false" aria-controls="Invoice">
                                <span class="oi oi-list text-dark"></span>
                                Invoice
                            </button>
                        </p>
                        <div class="collapse" id="Invoice">
                            <div class="mb-3">
                                
                            </div>
                        </div>
                    </div>





                    <div>
                        <p>
                            <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#Percent" aria-expanded="false" aria-controls="Percent">
                                <span class="oi oi-list text-dark"></span>
                                Percent
                            </button>
                        </p>
                        <div class="collapse" id="Percent">
                            <div class="mb-3">
                                
                            </div>
                        </div>
                    </div>




                    <div>
                        <p>
                            <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#File" aria-expanded="false" aria-controls="File">
                                <span class="oi oi-list text-dark"></span>
                                Download
                            </button>
                        </p>
                        <div class="collapse" id="File">
                            <div class="mb-3">
                                
                            </div>
                        </div>
                    </div>




                    <div class="text-end">
                        <button class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public ClientJob Client { get; set; } = new ClientJob();
    [Parameter]
    public EventCallback<ClientJob> SaveClickCallback { get; set; }
    [Parameter]
    public bool EditTable { get; set; } = false;
    

    ClientJob Model = new ClientJob();


    protected override void OnParametersSet()
    {
        Model = Client;       
        
    }


    private async Task HandleValidSubmit()
    {
        await SaveClickCallback.InvokeAsync(Model);
    }

}


